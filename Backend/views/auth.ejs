<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://kit.fontawesome.com/64d58efce2.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/auth.css" />
    <title>Sign in & Sign up Form</title>
  </head>
  <body>
    <div id="error-message" style="color: #8B5E3C; text-align: center; margin-bottom: 10px; display: none;">
      <!-- Error message will be inserted here by JavaScript -->
    </div>
    <div class="container">
      <div class="forms-container">
        <div class="signin-signup">
          <form action="/login" method="POST" class="sign-in-form">
            <h2 class="title">Sign in</h2>
            <div class="input-field">
              <i class="fas fa-user"></i>
              <input type="text" name="email" placeholder="Email" />
            </div>
            <div class="input-field">
              <i class="fas fa-lock"></i>
              <input type="password" name="password" placeholder="Password" />
            </div>
            <input type="submit" value="Login" class="btn solid" />
          </form>

          <form action="/register" method="POST" class="sign-up-form">
            <h2 class="title">Sign up</h2>
            <div class="input-field">
              <i class="fas fa-user"></i>
              <input type="text" name="username" placeholder="Username" />
            </div>
            <div class="input-field">
              <i class="fas fa-envelope"></i>
              <input type="email" name="email" placeholder="Email" />
            </div>
            <div class="input-field">
              <i class="fas fa-lock"></i>
              <input type="password" name="password" placeholder="Password" />
            </div>
            <div class="input-field">
              <i class="fas fa-lock"></i>
              <input type="password" name="confirmPassword" placeholder="Confirmation Password" />
            </div>
            <div class="input-field">
              <i class="fas fa-user"></i>
              <input type="text" name="firstName" placeholder="First Name" />
            </div>
            <div class="input-field">
              <i class="fas fa-user"></i>
              <input type="text" name="lastName" placeholder="Last Name" />
            </div>
            <div class="input-field">
              <i class="fas fa-phone"></i>
              <input type="text" name="mobile" placeholder="Mobile Number" />
            </div>
            <div class="gender-selection">
              <label>
                <input type="radio" name="gender" value="male" />
                Male
              </label>
              <label>
                <input type="radio" name="gender" value="female" />
                Female
              </label>
            </div>
            <div class="Admin-selection">
              <label>
                <input type="radio" name="isAdmin" value="true" />
                Admin
              </label>
              <label>
                <input type="radio" name="isAdmin" value="false" />
                User
              </label>
            </div>
            <input type="submit" class="btn" value="Sign up" />
          </form>
        </div>
      </div>

      <div class="panels-container">
        <div class="panel left-panel">
          <div class="content">
            <h3>New here ?</h3>
            <p>Lorem ipsum, dolor sit amet consectetur adipisicing elit. Debitis, ex ratione. Aliquid!</p>
            <button class="btn transparent" id="sign-up-btn">Sign up</button>
          </div>
          <img src="/software2_project-main/Backend/public/img/log.svg" class="image" alt="" />
        </div>
        <div class="panel right-panel">
          <div class="content">
            <h3>One of us ?</h3>
            <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Nostrum laboriosam ad deleniti.</p>
            <button class="btn transparent" id="sign-in-btn">Sign in</button>
          </div>
          <img src="/software2_project-main/Backend/public/img/register.svg" class="image" alt="" />
        </div>
      </div>
    </div>

    <script>
      // Function to check and display error message
      function checkError() {
        const errorMessage = document.getElementById("error-message");
        const params = new URLSearchParams(window.location.search);
        const error = params.get("error");

        if (error) {
          errorMessage.innerText = decodeURIComponent(error);
          errorMessage.style.display = "block";
        } else {
          errorMessage.style.display = "none";
          // Clear the error parameter from the URL without reloading the page
          if (params.has("error")) {
            window.history.replaceState({}, document.title, window.location.pathname);
          }
        }
      }

      // Run on page load
      window.onload = checkError;

      // Event listeners for form switching
      const sign_in_btn = document.querySelector("#sign-in-btn");
      const sign_up_btn = document.querySelector("#sign-up-btn");
      const container = document.querySelector(".container");

      sign_up_btn.addEventListener("click", () => {
        container.classList.add("sign-up-mode");
        // Clear error message and URL parameter when switching to sign-up mode
        const errorMessage = document.getElementById("error-message");
        errorMessage.style.display = "none";
        const params = new URLSearchParams(window.location.search);
        if (params.has("error")) {
          window.history.replaceState({}, document.title, window.location.pathname);
        }
      });

      sign_in_btn.addEventListener("click", () => {
        container.classList.remove("sign-up-mode");
        // Clear error message and URL parameter when switching to sign-in mode
        const errorMessage = document.getElementById("error-message");
        errorMessage.style.display = "none";
        const params = new URLSearchParams(window.location.search);
        if (params.has("error")) {
          window.history.replaceState({}, document.title, window.location.pathname);
        }
      });
    </script>
  </body>
</html>